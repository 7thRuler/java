import java.util.*;
class stringman{
	String s1;
	String s2;
	void length(String a){
	this.s1=a;
	int l1=s1.length();
	System.out.println("length of the string= "+l1);
	}
	public static void main(String args[]){
	int c,x;
	String a1;
	stringman obj=new stringman();
	Scanner inp=new Scanner(System.in);
	System.out.println("String Manipulation");
	do{
		System.out.println("MENU");
		System.out.println("1.length of a string");
		System.out.println("2.exit");
		System.out.println("enter your choice[]");
		c=inp.nextInt();
		switch(c){
			case 1:System.out.println("enter a string:");
			       a1=inp.next();
			       obj.length(a1);
			       break;
       			default:System.out.println("\n Wrong Choice ");
			}
			System.out.println("PRESS ONE TO CONTINUE: ");
    			x=inp.nextInt();
		}
		while(x==1);
	}
}
